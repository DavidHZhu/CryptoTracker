<!--Turn into panel-->
<div class="panel panel-default">
  <div class="panel-body">
    <p>
      <strong>Symbol:</strong>
      <%= @crypto.symbol %>
    </p>
    
    <p>
      <strong>Cost per:</strong>
      $<%= @crypto.cost_per %>
    </p>
    
    <p>
      <strong>Total Cost:</strong>
      $<%= @crypto.cost_per * @crypto.amount_owned %>
    </p>
    
    <p>
      <strong>Amount owned:</strong>
      <%= @crypto.amount_owned %>
    </p>
    
  </div>
      <div class="panel-footer">
      <%= link_to 'Edit', edit_crypto_path(@crypto), class: "btn btn-info" %> 
      <%= link_to 'Delete', crypto_path(@crypto), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      <%= link_to 'Back', cryptos_path, class: "btn btn-default"%>
    </div>
</div>
